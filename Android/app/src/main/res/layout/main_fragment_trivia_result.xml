<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trivia_result_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/trivia_result_gif"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:adjustViewBounds="true"
        android:scaleType="matrix" />

    <LinearLayout
        android:id="@+id/trivia_result_text_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/trivia_result_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="RESULT TEST" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <Button
            android:id="@+id/trivia_result_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:text="@string/prize_collect"
            android:textColor="@color/icons" />
    </LinearLayout>

</LinearLayout>