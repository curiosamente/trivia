<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

    <item android:left="20dp" android:top="20dp">
        <shape>
            <corners android:radius="10dp" />
            <solid android:color="@color/shadow" />
            <padding android:bottom="10dp" android:left="10dp"
                android:right="10dp" android:top="10dp" />

        </shape>
    </item>
    <item android:right="0dp" android:bottom="0dp" >
        <shape>
            <solid android:color="?attr/colorPrimary" />
            <corners android:radius="10dp" />
            <padding android:bottom="10dp" android:left="10dp"
                android:right="10dp" android:top="10dp" />

        </shape>
    </item>

</layer-list>